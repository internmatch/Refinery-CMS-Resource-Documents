<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(resource_category) -%>">
  <span class='title'>
    <%= resource_category.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), resource_category_path(resource_category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_resource_category_path(resource_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_resource_category_path(resource_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => resource_category.title),
        :method => :delete %>
  </span>
</li>
